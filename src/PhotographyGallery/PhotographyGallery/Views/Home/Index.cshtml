@model PhotographyGallery.Models.Photo[]

@{
    ViewBag.Title = "Photography Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="jumbotron">
    <div class="container text-center">
        <h1>ViewBag.Title</h1>
        <p>Some text that represents "Me"...</p>
    </div>
</div>

<div class="container-fluid bg-3 text-center">
    <h3>Some of my Work</h3><br>
    <div class="row">
        @if (Model == null || Model.Length < 1)
        {
            <h3>No photos for you!</h3>
        }
        else
        {
            foreach (var photo in Model)
            {
                <div class="col-sm-3">
                    <p>"Family"</p>
                    <img src="https://photos.smugmug.com/Portfolio/Family/i-sgfjc7G/0/X2/undertree-X2.jpg" class="img-responsive" style="width:100%" alt="Family">
                </div>
            }
        }
        
    </div><br>

