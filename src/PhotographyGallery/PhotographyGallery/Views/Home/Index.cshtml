@model PhotographyGallery.Models.BingImage[]

@{
    ViewBag.Title = "Photography Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <div class="container text-center">
        <h1>ViewBag.Title</h1>
        <p>Some text that represents "Me"...</p>
    </div>
</div>

<div class="container-fluid bg-3 text-center">
    <h3>Some of my Work</h3><br>
    <div class="row">
        @if (Model == null || Model.Length < 1)
        {
            <h3>No photos for you!</h3>
        }
        else
        {
            foreach (var bingImage in Model.Take(4))
            {
                <div class="col-sm-3">
                        <img src="@bingImage.contentUrl" class="img-responsive" style="width:100%" alt="@bingImage.name">
                </div>
            }
        }
        
    </div><br>

    <div class="container-fluid bg-3 text-center">
        <div class="row">
            @if (Model == null || Model.Length < 1)
            {
                <h3>No photos for you!</h3>
            }
            else
            {
                foreach (var bingImage in Model.Skip(4))
                {
                    <div class="col-sm-3">
                            <img src="@bingImage.contentUrl" class="img-responsive" style="width:100%" alt="@bingImage.name">
                    </div>
                }
            }
        </div>
    </div><br><br>
</div>